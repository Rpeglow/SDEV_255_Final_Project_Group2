<html lang="en">
<%- include ('../partials/head.ejs') %>
<body>
<%- include('../partials/nav.ejs') %>
    <div class="blogs content">
        <h2>Courses offered this semester</h2>
        
        <% if(role === 'teacher') { %>
            <p>Teacher</p>
            <ul>
                <li><a href="/blogs/create"><button class="btn">Add to the Course Catalog. </button></a></li>
                <li><a href="/blogs/:id"><button class = "btn"> Edit a Class</button></a></li>
            </ul>



        <% } else if(role === 'student') { %>


            <p>Student</p>
            <ul>
                <li><a href="/searchpage"><button class="btn">Search for class</button></a></li>
            </ul>
        <% } %>





        
        <% if(blogs.length > 0) { %>
            <form action="/create-schedule" method="POST">
                <select name="blogId" class="dropdown">
                <% blogs.forEach(blog => { %>
                    <option value="<%= blog.id %>">
                        <%= blog.name %>
                        <%= blog.description %>
                        <%= blog.subject %>
                        <%= blog.credits %>
                    </option>
                <% }) %>
            </select>
            <button type="submit">Add to Schedule</button>
            </form>
        <% } else { %>
            <p>No classes found.</p>
        <% } %>

    </div>

    <%- include('../partials/footer.ejs') %>
</body>
</html>

